<!DOCTYPE html>
<html>
<head>
  <title>Sitehunt</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<header class="col-lg-12 col-md-12 col-sm-12">
	<h1> Site Hunt </h1>
	<div class="links">
		<% if signed_in? %>
			<%= link_to 'Add a Product', new_product_path %>
			<%=link_to 'Logout', '/logout' %>
		<% else %>
			<%= link_to 'Login', '/auth/twitter' %>
		<%end %>
	</div>
</header>

<%= yield %>

</body>
</html>

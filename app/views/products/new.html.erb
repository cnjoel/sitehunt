<div class="col-md-offset-3 col-md-6">
  <div class="productaddform">
  <div class="productform-box col-md-offset-3">
      <%= form_for(@product) do |f| %>
      <p> Post a Product</p>
       <div class="field">
          <%= f.label :productname, class: "inputfieldname"  %><br>
          <%= f.text_field :productname, class: "inputfield" %>
        </div>
        <div class="field">
          <%= f.label :description, class: "inputfieldname" %><br>
          <%= f.text_field :description, class: "inputfield"  %>
        </div>
        <div class="field">
          <%= f.label :url, class: "inputfieldname" %><br>
          <%= f.text_field :url, class: "inputfield"  %>
        </div>
        <div class="actions">
          <%= f.submit %>
        </div>
      <% end %>
    </div>
</div>
</div>